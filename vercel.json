{
    "version": 2,
    "builds": [
      { 
        "src": "index.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["views/**", "public/**"],
          "maxDuration": 60
        }
      }
    ],
    "routes": [
      {
        "src": "/public/(.*)",
        "dest": "/public/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/index.js"
      }
    ],
    "functions": {
      "api/*.js": {
        "memory": 1024,
        "maxDuration": 60
      }
    }
}